pipeline {
  agent { label 'slave' }

  environment {
    GITHUB_TOKEN = credentials('9ed2fdd8-9883-4ec5-b073-042b2b9b3457')
    DOCKERHUB_REGISTRY_NAME = 'davidleonm/jenkins-test'
  }

  stages {
    stage('Prepare Python ENV') {
      steps {
        script {
          SetBuildStatus('pending')

          // Clean & Prepare new python environment
          sh 'rm -rf ENV'
          sh 'python3 -m venv ENV'

          sh 'ENV/bin/pip install --upgrade pip'
          sh "ENV/bin/pip install -r ${WORKSPACE}/PythonHelloWorld/requirements.txt"
        }
      }
    }

    stage('Execute unit tests') {
      steps {
        script {
          sh "ENV/bin/python -m unittest discover -s ${WORKSPACE}/PythonHelloWorld"
        }
      }
    }
    
    // REMOVE FROM HERE AND ADD IT TO MASTER
    // I MUST TEST THIS TO KNOW IF IT IS WORKING!
    stage('Tag version') {
      steps {
        script {
          VERSION = sh(script: 'cat VERSION', returnStdout: true)
          sh """
            git tag -a ${VERSION} -m "version ${VERSION}"
            git push
            git push --tags
          """
        }
      }
    }

    stage('Build image') {
      steps {
        script {
          def DOCKER_IMAGE = docker.build("${DOCKERHUB_REGISTRY_NAME}:${VERSION}", "--file ./Docker/Dockerfile_Deployment ${WORKSPACE}")
        }
      }
    }

    stage('Deploy image') {
      steps {
        script {
          docker.withRegistry('', '4ee308f2-529e-4509-95a5-12f757910667') {
            DOCKER_IMAGE.push()
            DOCKER_IMAGE.push('latest')
          }
        }
      }
    }
    
    stage('Remove temporary docker image') {
      steps{
        sh "docker rmi -f ${DOCKERHUB_REGISTRY_NAME}:${VERSION}"
      }
    }
  }
  post {
    success {
      script {
        SetBuildStatus('success')
      }
    }

    failure {
      script {
        SetBuildStatus('failure')
      }
    }
  }
}

def SetBuildStatus(String status) {
  sh "curl -H 'Authorization: Bearer ${GITHUB_TOKEN}' \
      -H 'Content-Type: application/json' \
      -X POST 'https://api.github.com/repos/davidleonm/jenkins-test/statuses/${GIT_COMMIT}' \
      -d '{\"state\": \"${status}\",\"context\": \"continuous-integration/jenkins\", \"description\": \"Jenkins\", \"target_url\": \"${BUILD_URL}\"}'"
}